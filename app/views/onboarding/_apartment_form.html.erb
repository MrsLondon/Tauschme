<div class='apartment-form'>
  <h3 class="fw-normal mb-5" style="color: #75bc6f;">The Apartment I Want To Exchange</h3>

  <div class="form-outline form-white">
    <%= onboarding_form.text_field "apartment[title]", class: "form-control form-control-lg" %>
    <label class="form-label" style="color: #000000;" for="form3Examplea2">Title</label>
  </div>

  <div class="form-outline form-white">
    <%= onboarding_form.text_field "apartment[area]", class: "form-control form-control-lg" %>
    <label class="form-label" style="color: #000000;" for="form3Examplea2">Area</label>
  </div>


  <div class="form-outline form-white">
    <%= onboarding_form.text_field "apartment[room]", class: "form-control form-control-lg" %>
    <label class="form-label" style="color: #000000;" for="form3Examplea3">Room</label>
  </div>

  <div class="form-outline form-white">
      <%= onboarding_form.file_field "apartment[photos]", multiple: true, class: "form-control form-control-lg"  %>
    <label class="form-label" for="form3Examplea4">photo</label>
  </div>


  <div class="form-outline form-white">
    <%= onboarding_form.text_field "apartment[rent]", class: "form-control form-control-lg" %>
      <label class="form-label" style="color: #000000;" for="form3Examplea4">Rent</label>
  </div>

  <div class="form-outline form-white">
      <%= onboarding_form.text_area "apartment[description]", class: "form-control form-control-lg" %>
    <label class="form-label" style="color: #000000;" for="form3Examplea5">Description</label>
  </div>

</div>
